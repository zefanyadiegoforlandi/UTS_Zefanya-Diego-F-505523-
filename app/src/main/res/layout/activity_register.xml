<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgregister"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Register"
        android:textColor="#2F80ED"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/logo"
        android:layout_alignParentRight="true"/>




    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Username"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_register"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colominput"
        android:hint="Enter Username"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/full_name"/>

    <TextView
        android:id="@+id/aemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Email"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/etUsername"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colominput"
        android:hint="Enter Valid Email Here"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/aemail"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Password"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/etEmail"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colominput"
        android:hint="Enter Password"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/password"/>

    <TextView
        android:id="@+id/Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Tanggal Lahir"
        android:textColor="#802F80ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/etPassword"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Tanggal"
        android:layout_marginTop="5dp"
        android:background="@drawable/date_picker_bg"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dp"
        android:layout_marginRight="-6dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:text="Register"
        android:textColor="@color/bluesky"
        android:textSize="18sp" />

</RelativeLayout>